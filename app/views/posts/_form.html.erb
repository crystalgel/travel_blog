<%= form_for @post, :html => {:multipart => true} do |f| %>
 <%if @post.errors.any? %>
	<div id=“errors”>
		<h2> <%= pluralize(@post.errors.count, "error")%>
			prevented this post from saving </h2>
		<ul>
			<% @post.errors.full_messages.each do |msg| %>
			<li> <%= msg %> </li>
<%end%>
		</ul>
	</div>
<%end%>

	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>

    <p>
        <%= f.label :country %>
        <%= f.text_field :country %>
        <%= f.label :city %>
        <%= f.text_field :city %>
    </p>

	<p>
		<%= f.label :body %><br>
		<%= f.text_area :body %>
	</p>

<div id=“photos”>
<p>
    <%= f.label :avatar %> <br>
    <%= f.file_field :avatar %> </p>
<p>
    <%= image_tag(@post.avatar_url) if @post.avatar? %>
    <%= f.text_field :remote_avatar_url %> </p>
    <p>
    <%= f.submit %>
</p>
    <%end%>
</div>
