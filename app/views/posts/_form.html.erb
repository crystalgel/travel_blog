
<%= form_for @post, :html => {:multipart => true} do |f| %>
 <%if @post.errors.any? %>
	<div id=“post_errors”>
		<h2> <%= pluralize(@post.errors.count, "error")%>
			prevented this post from saving </h2>
		<ul>
			<% @post.errors.full_messages.each do |msg| %>
			<li> <%= msg %> </li>
<%end%>
		</ul>
	</div>
<%end%>

<div id="post_title">

	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>
</div>

<div id="post_location">
        <%= f.label :country %>
        <%= f.text_field :country %>
        <%= f.label :city %>
        <%= f.text_field :city %>
</div>

<div id="post_body">
		<%= f.label :body %> <br>
		<%= f.text_area :body %>
</div>

<div id=“post_photos”>
<p>
    <%= f.label :photos %> <br>
    <%= f.file_field :avatar %>
</p>
<p>
    <%= image_tag(@post.avatar_url) if @post.avatar? %>
    <%= f.text_field :remote_avatar_url %> </p>
    <p>
    <%= f.submit %>
</p>
    <%end%>
</div>
