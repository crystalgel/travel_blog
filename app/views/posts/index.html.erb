

<div class="posts">
    <div class="content">
        <h1>I have lots of posts! Want to see them?! Of course you do!</h1>
    </div>

    <% @posts.each do|post| %>
    <div class="post_wrapper">
        <div class="content">
            <h2 class="title"><%= link_to post.title, post %> </h2>
        </div>
        <%= image_tag post.avatar %>
        <div class="content">
            <p class="date"><%= post.created_at.strftime("Posted on %B %d, %Y at %H:%M") %></p>
        </div>
    </div>
    <% end %>
</div>
